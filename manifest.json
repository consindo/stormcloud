{
  "name": "Stormcloud",
  "description": "Easier than looking outside",
  "version": "1.3",
  "offline_enabled": true,
  "browser_action": {
    "default_icon": "stormcloud.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/vendor/jquery.js", "js/background.js"]
  },
  "manifest_version": 2,
  "permissions": [
    "http://query.yahooapis.com/*",
    "http://weather.yahooapis.com/*",
    "http://xml.weather.yahoo.com/*"
  ],
  "icons": {
    "16": "stormcloud_16.png",
    "128": "stormcloud_128.png",
    "256": "stormcloud_256.png"
  }
}
