{
  "name": "Stormcloud",
  "description": "Easier than looking outside",
  "version": "1.3",
  "offline_enabled": true,
  "browser_action": {
    "default_icon": "stormcloud.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "manifest_version": 2,
  "permissions": [
    "unlimitedStorage",
    "http://*/",
    "https://*/"
  ]
}
